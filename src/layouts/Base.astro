---
import TwSizeIndicator from '@/components/TwSizeIndicator.astro';
import mainConfig from '@/config/main-config.json';
import theme from '@/config/theme.json';

import { plainify } from '@/lib/utils/textConverter';
import Footer from '@/partials/Footer.astro';
import Header from '@/partials/Header.astro';
import CookieBanner from '@/layouts/components/CookieBanner.tsx';
import '@/styles/main.css';
import '@/styles/transitions.css';
import { AstroFont } from 'astro-font';
import { ClientRouter } from 'astro:transitions';

import { loadLocalizedConfig } from '@/lib/utils/lang';
const { lang } = Astro.params;
const config: any = await loadLocalizedConfig(lang, 'config');
const i18n: any = await loadLocalizedConfig(lang, 'i18n');

const { pathname } = Astro.url;

// font families
const pf = theme.fonts.font_family.primary;

let fontPrimary, fontSecondary;
if (theme.fonts.font_family.primary) {
  fontPrimary = theme.fonts.font_family.primary.replace(/\+/g, ' ').replace(/:[ital,]*[ital@]*[wght@]*[0-9,;]+/gi, '');
}

// distructure frontmatters
const { title, description, image, noindex, canonical } = Astro.props;

const raw = Astro.props.meta_title;

const meta_title = raw
  ? raw.charAt(0).toUpperCase() + raw.slice(1) + ' | ' + mainConfig.profile.name
  : mainConfig.profile.name + ' - ' + config.profile.designation;
---

<!doctype html>
<html>
  <head>
    <!-- favicon -->
    <link rel="shortcut icon" href={mainConfig.site.favicon} />
    <!-- theme meta -->
    <meta name="theme-name" content="hydrogen-astro" />
    <meta name="msapplication-TileColor" content="#000000" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#fff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#000" />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

    <!-- google font css -->
    <AstroFont
      config={[
        {
          src: [],
          preload: false,
          display: 'swap',
          name: fontPrimary!,
          fallback: 'sans-serif',
          cssVariable: 'font-primary',
          googleFontsURL: `https://fonts.googleapis.com/css2?family=${pf}&display=swap`,
        },
      ]}
    />

    <!-- responsive meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5" />

    <!-- title -->
    <title>
      {plainify(meta_title ? meta_title : title ? title : config.site.title)}
    </title>

    <!-- canonical url -->
    {canonical && <link rel="canonical" href={canonical} item-prop="url" />}

    <!-- noindex robots -->
    {noindex && <meta name="robots" content="noindex,nofollow" />}

    <!-- meta-description -->
    <meta name="description" content={plainify(description ? description : config.metadata.meta_description)} />

    <ClientRouter />

    <!-- author from main-config.json -->
    <meta name="author" content={mainConfig.metadata.meta_author} />

    <!-- og-title -->
    <meta property="og:title" content={plainify(meta_title ? meta_title : title ? title : config.site.title)} />

    <!-- og-description -->
    <meta property="og:description" content={plainify(description ? description : config.metadata.meta_description)} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${mainConfig.site.base_url}/${Astro.url.pathname.replace('/', '')}`} />

    <!-- twitter-title -->
    <meta name="twitter:title" content={plainify(meta_title ? meta_title : title ? title : config.site.title)} />

    <!-- twitter-description -->
    <meta name="twitter:description" content={plainify(description ? description : config.metadata.meta_description)} />

    <!-- og-image -->
    <meta
      property="og:image"
      content={`${mainConfig.site.base_url}${image ? image : mainConfig.metadata.meta_image}`}
    />

    <!-- twitter-image -->
    <meta
      name="twitter:image"
      content={`${mainConfig.site.base_url}${image ? image : mainConfig.metadata.meta_image}`}
    />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <TwSizeIndicator />
    {!pathname.startsWith('/posts/') && <Header />}
    <main id="main-content">
      <slot />
    </main>
    <Footer />
    <CookieBanner client:load lang={lang} config={config} i18n={i18n} />
  </body>
</html>
