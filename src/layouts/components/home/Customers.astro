<section class={className} id="education">
  <div class="rounded border border-primary p-12 lg:p-9 h-full">
    <ul class="flex justify-center items-center space-x-4">
      <h4 class="text-primary">{customers.title}</h4>
    </ul>
    <p class="my-4">
      <ul class="space-y-6">
        <li class="border-border">
          <!-- <h6 class="text-center">{services.subtitle}</h6> -->
          <p class="text-muted-foreground text-justify my-4">
            {customers.subtitle}
          </p>
        </li>
      </ul>

      <div class="relative overflow-hidden py-4">
        <div
          class="flex animate-scroll-110s hover:[animation-play-state:paused]"
        >
          {
            customers.items.concat(customers.items).map((item, index) => (
              <a
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-shrink-0 flex justify-center items-center w-28 mx-3"
              >
                <img
                  src={item.image}
                  alt={item.name}
                  loading="lazy"
                  class="max-h-28 object-contain opacity-65 hover:opacity-85 transition-all duration-300 ease-in-out rounded-xl bg-white/10 hover:bg-white/20 backdrop-blur-sm p-2"
                />
              </a>
            ))
          }
        </div>
      </div>
    </p>
  </div>
</section>
