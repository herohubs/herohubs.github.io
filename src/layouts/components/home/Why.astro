---
const { className } = Astro.props;
import story from '@/config/home/why.json';
---

<section class={className} id="why">
  <div class="rounded-2xl p-12 lg:p-9 h-full border border-border bg-body/90">
    <p class="my-4">
      <ul class="space-y-6">
        <li class="border-border">
          <h6 class="text-center">{story.title}</h6>
          <p class="text-muted-foreground text-center my-4">
            {story.text1}
          </p>
          <p class="text-muted-foreground text-center my-4">
            {story.text2}
          </p>
        </li>
      </ul>
    </p>
  </div>
</section>
