<section class={className} id="education">
  <div class="rounded border border-primary p-12 lg:p-9 h-full">
    <ul class="flex justify-center items-center space-x-4">
      <h4 class="text-primary">{services.title}</h4>
    </ul>
    <p class="my-4">
      <ul class="space-y-6">
        <li class="border-border">
          <!-- <h6 class="text-center">{services.subtitle}</h6> -->
          <p class="text-muted-foreground text-center my-4">
            {services.subtitle}
          </p>
        </li>
      </ul>
      <!-- Griglia 2x2 -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-6">
        {
          services.items.map((item, index) => (
            <div
              class="rounded border border-border p-8 hover:shadow-md transition-shadow duration-300"
              key={index}
            >
              <h5 class="text-primary mb-3 text-center">{item.title}</h5>
              <p class="text-muted-foreground text-center">
                {item.description}
              </p>
            </div>
          ))
        }
      </div>
    </p>
  </div>
</section>
