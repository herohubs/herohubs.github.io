---
import type { HomeData } from '@/interfaces';
import { loadLocalizedConfig } from '@/lib/utils/lang';
const { lang } = Astro.params;
const { className } = Astro.props;
const home: HomeData = await loadLocalizedConfig(lang, 'home');
---

<section class={className} id="services">
  <div class="rounded-4xl p-12 lg:p-9 h-full border border-border bg-body/85">
    <p class="my-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-6">
        {
          home.services.items.map((item, index) => (
            <div class="rounded-4xl border border-border p-8 hover:shadow-md transition-shadow duration-300 ">
              <h5 class="text-primary mb-3 text-center">{item.title}</h5>
              <p class="text-muted-foreground text-center">{item.text}</p>
            </div>
          ))
        }
      </div>
    </p>
  </div>
</section>
