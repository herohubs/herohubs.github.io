---
const { className } = Astro.props;
import reality from "@/config/home/how.json";

export interface IEducation {
  degree: string;
  institution: string;
  period: string;
  details: string;
}
---

<section class={className} id="how">
  <div
    class="rounded-2xl p-12 lg:p-9 h-full bg-body border border-border bg-body/90"
  >
    <p class="my-4">
      <ul class="space-y-6">
        <li class="border-border">
          <h6 class="text-center">{reality.title}</h6>
          <p class="text-muted-foreground text-center my-4">
            {reality.text1}
          </p>
          <p class="text-muted-foreground text-center my-4">
            {reality.text2}
          </p>
        </li>
      </ul>
    </p>
  </div>
</section>
