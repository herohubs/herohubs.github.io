---
import social from '@/config/social.json';
import Social from '../Social.astro';
import type { HomeData } from '@/interfaces';
import { loadLocalizedConfig } from '@/lib/utils/lang';
const { lang } = Astro.params;
const { className } = Astro.props;
const home: HomeData = await loadLocalizedConfig(lang, 'home');
---

<section class={className} id="contacts">
  <div class="rounded-4xl p-12 lg:p-9 h-full border border-border bg-body/85">
    <ul class="flex justify-center text-center items-center space-x-4">
      <h4 class="text-primary">{home.contacts.title}</h4>
    </ul>
    <p class="my-4">
      <ul class="space-y-6">
        <li class="border-border">
          <h6 class="text-center">{home.contacts.subtitle}</h6>
          <p class="text-muted-foreground text-center my-4">
            {home.contacts.text}
          </p>
        </li>
      </ul>
      <div>
        <div class="w-full flex items-center justify-center">
          <Social source={social.main} className="social-icons mt-8" />
        </div>
        <a
          class="flex justify-center my-4 hover:text-primary transition-colors duration-200"
          href={'mailto:' + home.contacts.email}
        >
          {home.contacts.email}
        </a>
      </div>
    </p>
  </div>
</section>
