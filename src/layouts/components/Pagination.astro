---
import type { Pagination } from '@/types';
const { section, currentPage = 1, totalPages = 1 }: Pagination = Astro.props;

const lang = Astro.params.lang; // prendi la lingua direttamente dalla route

const hasPrevPage = currentPage > 1;
const hasNextPage = currentPage < totalPages;

let pageList: number[] = [];
for (let i = 1; i <= totalPages; i++) {
  pageList.push(i);
}
---

{
  totalPages > 1 && (
    <nav
      class="mb-4 flex justify-center max-w-md mx-auto -space-x-px bg-body/85 py-5 px-10 rounded-full"
      aria-label="Pagination"
    >
      {/* Previous */}
      {hasPrevPage ? (
        <a
          href={
            currentPage - 1 === 1
              ? `/${lang}${section ? '/' + section : ''}`
              : `/${lang}${section ? '/' + section : ''}/page/${currentPage - 1}`
          }
          class="border border-primary px-2 py-2 text-text"
        >
          <span class="sr-only">Previous</span>
          <svg
            class="mt-1 h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ) : (
        <span class="border border-primary px-2 py-2 text-text">
          <span class="sr-only">Previous</span>
          <svg
            class="mt-1 h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </span>
      )}

      {/* Page numbers */}
      {pageList.map((pageNum) =>
        pageNum === currentPage ? (
          <span aria-current="page" class="border border-primary bg-primary px-4 py-2 text-white">
            {pageNum}
          </span>
        ) : (
          <a
            href={`/${lang}${section ? '/' + section : ''}/page/${pageNum}`}
            aria-current="page"
            class="border border-primary px-4 py-2 text-text"
          >
            {pageNum}
          </a>
        ),
      )}

      {/* Next */}
      {hasNextPage ? (
        <a
          href={`/${lang}${section ? '/' + section : ''}/page/${currentPage + 1}`}
          class="border border-primary px-2 py-2 text-text"
        >
          <span class="sr-only">Next</span>
          <svg
            class="mt-1 h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ) : (
        <span class="border border-primary px-2 py-2 text-text">
          <span class="sr-only">Next</span>
          <svg
            class="mt-1 h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        </span>
      )}
    </nav>
  )
}
