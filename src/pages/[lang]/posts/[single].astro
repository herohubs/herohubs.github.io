---
import Base from '@/layouts/Base.astro';
import PostSingle from '@/layouts/PostSingle.astro';
import { getSinglePage } from '@/lib/contentParser.astro';
import mainConfig from '@/config/main-config.json';

export async function getStaticPaths() {
  const paths = [];

  for (const lang of mainConfig.settings.languages) {
    const posts = await getSinglePage('posts', lang);

    for (const post of posts) {
      const single = post.id.replace(`${lang}/`, '').replace(/\.mdx?$/, '');

      paths.push({
        params: {
          lang,
          single,
        },
        props: {
          post,
        },
      });
    }
  }

  return paths;
}

const { post } = Astro.props;
const { lang } = Astro.params;
const { title, meta_title, description, image } = post.data;
---

<Base title={title} meta_title={meta_title} description={description} image={image}>
  <PostSingle post={post} lang={lang} />
</Base>
