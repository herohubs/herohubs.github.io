---
import theme from '@/config/theme.json';
import config from '@/config/config.json';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>Thinking..</title>
  </head>

  <body
    style={`background-color: ${theme.colors.default.theme_color.body}; color: ${theme.colors.default.theme_color.text};`}
  >
    <noscript>
      <p>JavaScript is required. <a href="/en">Go to English site</a></p>
    </noscript>
    <script
      define:vars={{ supportedLanguages: config.settings.languages, defaultLang: config.settings.default_language }}
    >
      const browserLang = navigator.language?.slice(0, 2);
      const lang = supportedLanguages.includes(browserLang) ? browserLang : defaultLang;
      window.location.replace('/' + lang);
    </script>
  </body>
</html>
